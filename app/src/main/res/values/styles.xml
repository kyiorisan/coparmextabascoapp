<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarCoparmex</item>
        <item name="android:textColorPrimary">@color/bright_foreground_material_light</item>m>
        <item name="android:textColorSecondaryInverse">@color/card_onTouch</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:actionModeBackground">@color/actionModeGrey</item>
    </style>

    <style name="ActionBarCoparmex" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/Drawer_Icons</item>
        <item name="android:titleTextStyle">@style/TextoTitulo</item>
    </style>

    <style name="TextoTitulo" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="maptheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/element_selector</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Coparmex" parent="AppTheme" >
        <item name="android:textColorPrimary">@color/card_background</item>
        <item name="android:textColorPrimaryInverse">@color/abc_input_method_navigation_guard</item>
        <item name="android:textColorSecondary">@color/abc_input_method_navigation_guard</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="actionbar" parent="AppTheme" >
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/abc_primary_text_disable_only_material_light</item>
    </style>
</resources>
