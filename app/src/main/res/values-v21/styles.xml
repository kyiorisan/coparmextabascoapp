<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:navigationBarColor">@color/accent_material_dark</item>
        <item name="android:statusBarColor">@color/Coparmex</item>
    </style>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/Coparmex</item>
        <item name="android:colorAccent">@color/Drawer_Icons</item>
        <item name="android:colorPrimaryDark">@color/Coparmex</item>
        <item name="android:statusBarColor">@color/btnFBRegistro</item>
        <item name="android:navigationBarColor">@color/Coparmex</item>
        <item name="android:textColorPrimary">@color/bright_foreground_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_input_method_navigation_guard</item>
        <item name="android:textColorSecondaryInverse">@color/card_onTouch</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:colorForeground">@color/material_deep_teal_500</item>
        <item name="android:actionModeBackground">@color/actionModeGrey</item>
        <item name="android:actionBarStyle">@style/Coparmex.ActionBar</item>
    </style>

    <style name="Coparmex" parent="android:Theme.Material.Light" >
        <item name="android:colorPrimary">@color/Coparmex</item>
        <item name="android:colorAccent">@color/Drawer_Icons</item>
        <item name="android:colorPrimaryDark">@color/Drawer_Icons</item>
        <item name="android:statusBarColor">@color/Coparmex</item>
        <item name="android:textColorPrimary">@color/card_background</item>
        <item name="android:textColorPrimaryInverse">@color/abc_input_method_navigation_guard</item>
        <item name="android:textColorSecondary">@color/abc_input_method_navigation_guard</item>
        <item name="android:textColorSecondaryInverse">@color/abc_search_url_text_normal</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@color/Coparmex</item>

    </style>

    <style name="Coparmex.ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/Coparmex</item>
        <item name="android:titleTextStyle">@style/Coparmex.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:elevation">7dp</item>
    </style>

    <style name="Coparmex.ActionBar.TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/plain_white</item>
    </style>

    <style name="actionbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
        <item name="android:statusBarColor">@color/btnFBRegistro</item>
        <item name="android:colorPrimaryDark">@color/buenrate</item>
        <item name="android:colorAccent">@color/Coparmex</item>
        <item name="android:textColorSecondaryInverse">@color/abc_primary_text_disable_only_material_light</item>
    </style>


</resources>