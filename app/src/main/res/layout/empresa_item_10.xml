<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:onClick="test"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_selector"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagen10"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <ProgressBar
                android:id="@+id/loader10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:progressDrawable="@drawable/progress_loader"
                android:layout_centerInParent="true"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.95">

            <TextView
                android:id="@+id/nombre10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_weight="1.05"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:password="false"
                android:text="Horizon Gasolineras"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/locate10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/marker" />

                <ImageView
                    android:id="@+id/call10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cphone" />

                <ImageView
                    android:id="@+id/browse10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/globe" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/logo10"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:scaleType="centerCrop"
                android:src="@drawable/emp10" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
